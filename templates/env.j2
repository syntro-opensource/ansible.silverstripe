# managed by ansible
# last run: {{ template_run_date }}
# to: {{ template_host }}

SS_BASE_URL="{{ silverstripe_ss_base_url }}"

# DB credentials
SS_DATABASE_CLASS="{{ silverstripe_ss_database_class || default('MySQLPDODatabase') }}"
SS_ENVIRONMENT_TYPE="{{ silverstripe_ss_environment_type }}"
SS_DATABASE_SERVER="{{ silverstripe_ss_database_server }}"
SS_DATABASE_USERNAME="{{ silverstripe_ss_database_username }}"
SS_DATABASE_PASSWORD="{{ silverstripe_ss_database_password }}"
SS_DATABASE_NAME="{{ silverstripe_ss_database_name }}"
SS_DEFAULT_ADMIN_USERNAME={{ silverstripe_ss_admin_username }}
SS_DEFAULT_ADMIN_PASSWORD={{ silverstripe_ss_admin_password }}

{% if (silverstripe_add_ss_keys|length > 0) %}
# User defined variables
{% for (key,value) in silverstripe_add_ss_keys.items() %}
{{ key }}="{{ value }}"
{% endfor %}
{% endif %}

# flushing
SS_FLUSH_ON_DEPLOY="{{ silverstripe_ss_flush_on_deploy }}"

# logging
SS_ERROR_LOG="{{ ss_current_log_file | default('../../logs/ss_log.log') }}"
